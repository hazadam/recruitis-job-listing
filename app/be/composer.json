{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "nyholm/psr7": "^1.8",
        "open-telemetry/exporter-otlp": "^1.2",
        "open-telemetry/sdk": "^1.2",
        "symfony/console": "6.4.*",
        "symfony/dotenv": "6.4.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.4.*",
        "symfony/http-client": "^6.4",
        "symfony/runtime": "6.4.*",
        "symfony/security-bundle": "^6.4",
        "symfony/yaml": "6.4.*"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "tbachert/spi": false
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/otel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "ecs": "vendor/bin/ecs check src tests -c ecs.php",
        "ecs-fix": "vendor/bin/ecs check --fix src tests -c ecs.php",
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon",
        "dev": "php -S 0.0.0.0:8080 -t public"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "^12.0",
        "slevomat/coding-standard": "^8",
        "symfony/browser-kit": "^6.4",
        "symplify/easy-coding-standard": "*"
    }
}
